@model RegisterVM
<section id="contact" class="contact">
    <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="row aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">

            <div class="col-lg-6">
                <form method="post" role="form" class="php-email-form">
                    <div class="row">
                        <div class="col form-group">
                            <input asp-for="Name" class="form-control" id="name" placeholder="Your Name" required="">
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div class="col form-group">
                            <input asp-for="Surname" class="form-control" id="surname" placeholder="Your Surname" required="">
                            <span asp-validation-for="Surname"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Username" class="form-control" id="username" placeholder="Username" required="">
                            <span asp-validation-for="Username"></span>
                        </div>
                        <div class="col form-group">
                            <input asp-for="Email" class="form-control" id="email" placeholder="Your Email" required="">
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="col form-group">
                            <input asp-for="Password" class="form-control" id="password" placeholder="Password" required="">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="col form-group">
                            <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Confirm Password" required="">
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>
                    <div class="my-3">
                        <div asp-validation-summary="ModelOnly" class="loading"></div>
                    </div>
                    <div class="text-center"><button type="submit">Sign Up</button></div>
                </form>
            </div>

        </div>

    </div>
</section>